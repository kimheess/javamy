package chap04;

class FlowEx26 {
	public static void main(String[] args) { 
		
//		1부터 100까지의 합은 5050입니다. 그렇다면 1부터 몇까지의 합이 최초로 1000을 초과하는 값일까요?
		
		
		
		
		
		
		
		
//		int num = 0;
//		int sum = 0;
//		
//		while(sum<= 1000) {
//			num++;
//			sum += num;
//			
//		}
//		System.out.printf("1부터 %d 까지의 합은 %d 입니다." , num,sum);
//		
//		int sum = 0; 
//		for(int num = 1; num<=1000; num++) {
//			sum+= num;
//		}
//		System.out.printf("1부터 %d 까지의 합은 %d 입니다." , num,sum);
		
		int sum = 97;
		int i   = 0;

		//++i 		->  i: 1 
		//sum += ++i -> sum :1
		
		while((sum += ++i) <= 100) { // i를 1씩 증가시켜서 sum에 계속 더해나간다.
			System.out.printf("%d - %d%n", i, sum);
		}
	} // main의 끝
}
