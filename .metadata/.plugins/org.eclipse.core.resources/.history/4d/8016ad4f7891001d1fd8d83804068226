package chap04;

import java.util.Scanner;
/*
 	사용자에게 영어와 수학 점수를 입력 받아 다음의 결과를 출력하는 코드를 작성하세요.
 	
 	1) 영어와 수학 점수 모두 80점 이상이면 합격
 	2) 영어와 수학 점수 중 한 과목이라도 60점 미만이면 과락
 	3) 영어와 수학점수 모두 80점 이상이면 합격 
 	단 AND 연산자 (& or &&)는 사용할 수 없습니다.
 */

public class Exam1 {

	public static void main(String[] args) {
		Scanner sc= new Scanner(System.in);
		int math ,eng;
		String result = "";
		
		System.out.print("영어, 수학 점수를 입력하세요 >>>");
		eng = sc.nextInt();
		math = sc.nextInt();
	//	3) 영어와 수학점수 모두 80점 이상이면 합격 
	// 	단 AND 연산자 (& or &&)는 사용할 수 없습니다
		
		if(math <=80 == eng <=80 ) {
			result = "합격";
		}else 
			System.out.print("불합격");
		System.out.println(result);
		
		
//		System.out.println(result);
		
//		영어와 수학 점수 모두 80점이면 합격
//		if(eng >= 80 & math >= 80) {
//			result = "합격입니다.";
//		}else {
//			result = "불합격 입니다.";
//		}
//		
//		System.out.println(result);
		
// 		영어와 수학점수 중 한 과목이라도 과락 
//		
//		if(eng < 60 | math < 60) {
//			result = "과락이 있습니다.";
//			}else {
//				result = "과락이 없습니다.";
//			}
////	
//		System.out.println(result);
//		
		
		
		}
	}
